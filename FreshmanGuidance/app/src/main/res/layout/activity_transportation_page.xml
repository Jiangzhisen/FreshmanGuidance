<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".transportation_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:text="◀" />

            <TextView
                android:id="@+id/transportation1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="1. 開車" />

            <ImageView
                android:id="@+id/transportation1Img"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/transportation_map1" />


            <TextView
                android:id="@+id/transportation1Text"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:text="中壢火車站→中原大學\n開車 8分鐘" />

            <TextView
                android:id="@+id/transportation2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="2. Ubike" />

            <ImageView
                android:id="@+id/transportation2Img"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/transportation_map2" />

            <TextView
                android:id="@+id/transportation2Text"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:text="中壢火車站→中原大學\n Ubike 7分鐘（Ubike站在中壢火車站前站、後站都有）" />

            <TextView
                android:id="@+id/transportation3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="3. 公車" />

            <ImageView
                android:id="@+id/transportation3Img"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/transportation_map3" />

            <TextView
                android:id="@+id/transportation3Text"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:text="中壢火車站→中原大學公車\n（中壢桃園客運站在從中壢火車站前走路走到2分鐘）" />

            <TextView
                android:id="@+id/transportation4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="4. 走路" />

            <ImageView
                android:id="@+id/transportation4Img"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/transportation_map4" />

            <TextView
                android:id="@+id/transportation4Text"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:text="中壢火車站→中原大學\n走路22分鐘"/>

            <TextView
                android:id="@+id/transportation5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="5. 桃園客運時刻表" />

            <ImageView
                android:id="@+id/transportation5Img"
                android:layout_width="500dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/transportation_map5" />


            <TextView
                android:id="@+id/transportation6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="6. 中壢客運時刻表" />

            <ImageView
                android:id="@+id/transportation6Img"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                app:srcCompat="@drawable/transportation_map6" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>